<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cop.mobi.account.service.dao.AccountDao">
	<resultMap id="userResult" type="com.cop.mobi.account.entity.UserPo">
		<result property="id" column="id" />
		<result property="email" column="email" />
		<result property="name" column="name" />
		<result property="pwd" column="pwd" />
		<result property="sex" column="sex" />
	</resultMap>

	<select id="getUser" resultMap="userResult">
		SELECT
		id, email, name, pwd, sex
		FROM
		LC_User
		WHERE
		${key}=#{val}
	</select>

	<select id="getUsers" resultMap="userResult">
		SELECT
		id, email, name, pwd, sex
		FROM
		LC_User
		WHERE
		${key} IN (${val})
	</select>

	<insert id="addUser" parameterType="com.cop.mobi.account.entity.User">
		INSERT INTO
		LC_User
		(name, email, pwd, sex)
		VALUES
		(#{name}, #{email}, #{pwd}, #{sex})
	</insert>

	<update id="updateUser" parameterType="com.cop.mobi.account.entity.User">
		UPDATE LC_User SET
		email=#{email},
		name=#{name},
		pwd=#{pwd},
		sex=#{sex}
		WHERE
		id=#{id}
	</update>

	<delete id="deleteUser" parameterType="int">
		DELETE FROM LC_User WHERE
		id=#{id}
	</delete>
</mapper>